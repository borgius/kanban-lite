{
  "name": "kanban-lite",
  "displayName": "Kanban Lite",
  "description": "A kanban board for your codebase. Cards stored as markdown.",
  "version": "1.0.29",
  "publisher": "borgius",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/borgius/kanban-lite"
  },
  "bugs": {
    "url": "https://github.com/borgius/kanban-lite/issues"
  },
  "homepage": "https://github.com/borgius/kanban-lite#readme",
  "icon": "resources/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "kanban",
    "markdown",
    "project management",
    "task management",
    "board"
  ],
  "activationEvents": [
    "onWebviewPanel:kanban-lite.panel",
    "onView:kanban-lite.boardView"
  ],
  "main": "./dist/extension.js",
  "exports": {
    ".": "./dist/extension.js",
    "./sdk": {
      "types": "./dist/sdk/sdk/index.d.ts",
      "import": "./dist/sdk/index.mjs",
      "require": "./dist/sdk/index.cjs"
    }
  },
  "typesVersions": {
    "*": {
      "sdk": [
        "./dist/sdk/sdk/index.d.ts"
      ]
    }
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kanban-lite",
          "title": "Kanban Lite",
          "icon": "resources/kanban.svg"
        }
      ]
    },
    "views": {
      "kanban-lite": [
        {
          "id": "kanban-lite.boardView",
          "name": "Board",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "kanban-lite.open",
        "title": "Open Kanban Board",
        "category": "Kanban Lite",
        "icon": {
          "light": "resources/kanban-light.svg",
          "dark": "resources/kanban-dark.svg"
        }
      },
      {
        "command": "kanban-lite.addCard",
        "title": "Add Card",
        "category": "Kanban Lite"
      }
    ],
    "menus": {
      "editor/title/run": [
        {
          "command": "kanban-lite.open",
          "when": "resourceLangId == markdown"
        }
      ]
    }
  },
  "bin": {
    "kanban-md": "./dist/standalone.js",
    "kanban-lite": "./dist/cli.js",
    "kl": "./dist/cli.js",
    "kanban-mcp": "./dist/mcp-server.js"
  },
  "scripts": {
    "publish:all": "vsce publish && ovsx publish",
    "vscode:prepublish": "npm run build",
    "build": "npm run build:extension && npm run build:webview && npm run build:standalone-webview && npm run build:cli && npm run build:mcp && npm run build:sdk",
    "build:sdk": "esbuild src/sdk/index.ts --bundle --outfile=dist/sdk/index.cjs --format=cjs --platform=node && esbuild src/sdk/index.ts --bundle --outfile=dist/sdk/index.mjs --format=esm --platform=node && tsc -p tsconfig.sdk.json",
    "build:cli": "esbuild src/cli/index.ts --bundle --outfile=dist/cli.js --format=cjs --platform=node --banner:js=\"#!/usr/bin/env node\"",
    "build:mcp": "esbuild src/mcp-server/index.ts --bundle --outfile=dist/mcp-server.js --format=cjs --platform=node --external:@modelcontextprotocol/sdk --external:zod --banner:js=\"#!/usr/bin/env node\"",
    "build:extension": "esbuild src/extension/index.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "build:webview": "vite build",
    "build:standalone": "npm run build:standalone-server && npm run build:standalone-webview",
    "build:standalone-server": "esbuild src/standalone/index.ts --bundle --outfile=dist/standalone.js --format=cjs --platform=node --banner:js=\"#!/usr/bin/env node\"",
    "build:standalone-webview": "vite build --config vite.standalone.config.ts",
    "standalone": "npm run build:standalone && node dist/standalone.js",
    "watch": "concurrently \"npm run watch:extension\" \"npm run watch:webview\"",
    "watch:extension": "esbuild src/extension/index.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --watch",
    "watch:webview": "vite build --watch",
    "watch:standalone-server": "esbuild src/standalone/index.ts --bundle --outfile=dist/standalone.js --format=cjs --platform=node --banner:js=\"#!/usr/bin/env node\" --watch",
    "dev:standalone-server": "node --watch-path=dist/standalone.js dist/standalone.js --port 3001 --no-browser",
    "dev:standalone-vite": "vite dev --config vite.standalone.config.ts",
    "dev": "npm run build:standalone-server && concurrently \"npm run watch:extension\" \"npm run watch:webview\" \"npm run watch:standalone-server\" \"npm run dev:standalone-server\" \"npm run dev:standalone-vite\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "docs": "npm run docs:sdk && npm run docs:api && npm run docs:webhooks",
    "docs:sdk": "npx tsx scripts/generate-sdk-docs.ts",
    "docs:api": "npx tsx scripts/generate-api-docs.ts",
    "docs:webhooks": "npx tsx scripts/generate-webhooks-docs.ts",
    "package": "vsce package --no-dependencies -o releases/",
    "release": "npm version patch && npm run build && npm publish && npm run package && npm run release:github",
    "release:minor": "npm version minor && npm run build && npm publish && npm run package && npm run release:github",
    "release:major": "npm version major && npm run build && npm publish && npm run package && npm run release:github",
    "release:github": "git push origin v$(node -p \"require('./package.json').version\") && gh release create v$(node -p \"require('./package.json').version\") releases/kanban-lite-$(node -p \"require('./package.json').version\").vsix --generate-notes"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tailwindcss/typography": "^0.5.19",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/vscode": "^1.85.0",
    "@types/ws": "^8.5.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vscode/vsce": "^3.7.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "esbuild": "^0.19.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdoc-to-markdown": "^9.1.3",
    "ovsx": "^0.10.8",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.53.0",
    "vite": "^5.0.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@tiptap/extension-placeholder": "^3.15.3",
    "@tiptap/pm": "^3.15.3",
    "@tiptap/react": "^3.15.3",
    "@tiptap/starter-kit": "^3.15.3",
    "chokidar": "^4.0.0",
    "clsx": "^2.1.1",
    "fractional-indexing": "^3.2.0",
    "js-yaml": "^4.1.1",
    "lucide-react": "^0.562.0",
    "marked": "^17.0.3",
    "open": "^10.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.0",
    "tiptap-markdown": "^0.9.0",
    "ws": "^8.18.0",
    "zustand": "^5.0.10"
  }
}
