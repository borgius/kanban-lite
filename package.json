{
  "name": "kanban-markdown",
  "displayName": "Kanban Markdown",
  "description": "A kanban board for your codebase. Features stored as markdown.",
  "version": "1.8.1",
  "publisher": "LachyFS",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/LachyFS/kanban-markdown-vscode-extension"
  },
  "bugs": {
    "url": "https://github.com/LachyFS/kanban-markdown-vscode-extension/issues"
  },
  "homepage": "https://github.com/LachyFS/kanban-markdown-vscode-extension#readme",
  "icon": "resources/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "kanban",
    "markdown",
    "project management",
    "task management",
    "board"
  ],
  "activationEvents": [
    "onWebviewPanel:kanban-markdown.panel",
    "onView:kanban-markdown.boardView"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kanban-markdown",
          "title": "Kanban Markdown",
          "icon": "resources/kanban.svg"
        }
      ]
    },
    "views": {
      "kanban-markdown": [
        {
          "id": "kanban-markdown.boardView",
          "name": "Board",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "kanban-markdown.open",
        "title": "Open Kanban Board",
        "category": "Kanban Markdown",
        "icon": {
          "light": "resources/kanban-light.svg",
          "dark": "resources/kanban-dark.svg"
        }
      },
      {
        "command": "kanban-markdown.addFeature",
        "title": "Add Feature",
        "category": "Kanban Markdown"
      }
    ],
    "configuration": {
      "title": "Kanban Markdown",
      "properties": {
        "kanban-markdown.featuresDirectory": {
          "type": "string",
          "default": ".kanban",
          "description": "Directory path (relative to workspace root) where feature markdown files are stored."
        },
        "kanban-markdown.defaultPriority": {
          "type": "string",
          "default": "medium",
          "enum": [
            "critical",
            "high",
            "medium",
            "low"
          ],
          "enumDescriptions": [
            "Critical priority - urgent issues",
            "High priority - important tasks",
            "Medium priority - normal tasks",
            "Low priority - nice to have"
          ],
          "description": "Default priority for new features."
        },
        "kanban-markdown.defaultStatus": {
          "type": "string",
          "default": "backlog",
          "enum": [
            "backlog",
            "todo",
            "in-progress",
            "review",
            "done"
          ],
          "enumDescriptions": [
            "Backlog - not yet planned",
            "To Do - planned for work",
            "In Progress - currently being worked on",
            "Review - ready for review",
            "Done - completed"
          ],
          "description": "Default status for new features."
        },
        "kanban-markdown.columns": {
          "type": "array",
          "default": [
            {
              "id": "backlog",
              "name": "Backlog",
              "color": "#6b7280"
            },
            {
              "id": "todo",
              "name": "To Do",
              "color": "#3b82f6"
            },
            {
              "id": "in-progress",
              "name": "In Progress",
              "color": "#f59e0b"
            },
            {
              "id": "review",
              "name": "Review",
              "color": "#8b5cf6"
            },
            {
              "id": "done",
              "name": "Done",
              "color": "#22c55e"
            }
          ],
          "description": "Customize the kanban board columns.",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique identifier for the column (used in frontmatter status)"
              },
              "name": {
                "type": "string",
                "description": "Display name for the column"
              },
              "color": {
                "type": "string",
                "description": "Color for the column header (hex format)"
              }
            },
            "required": [
              "id",
              "name",
              "color"
            ]
          }
        },
        "kanban-markdown.aiAgent": {
          "type": "string",
          "default": "claude",
          "enum": [
            "claude",
            "codex",
            "opencode"
          ],
          "enumDescriptions": [
            "Claude Code (Anthropic)",
            "Codex (OpenAI)",
            "OpenCode"
          ],
          "description": "Default AI agent to use for the 'Start with AI' feature."
        },
        "kanban-markdown.showPriorityBadges": {
          "type": "boolean",
          "default": true,
          "description": "Show priority badges on feature cards."
        },
        "kanban-markdown.showAssignee": {
          "type": "boolean",
          "default": true,
          "description": "Show assignee on feature cards."
        },
        "kanban-markdown.showDueDate": {
          "type": "boolean",
          "default": true,
          "description": "Show due date on feature cards."
        },
        "kanban-markdown.showLabels": {
          "type": "boolean",
          "default": true,
          "description": "Show labels on feature cards and in editors."
        },
        "kanban-markdown.showBuildWithAI": {
          "type": "boolean",
          "default": true,
          "description": "Show the 'Build with AI' button on feature cards."
        },
        "kanban-markdown.showFileName": {
          "type": "boolean",
          "default": false,
          "description": "Show the source markdown filename on feature cards."
        },
        "kanban-markdown.compactMode": {
          "type": "boolean",
          "default": false,
          "description": "Use compact card layout to show more features."
        },
        "kanban-markdown.markdownEditorMode": {
          "type": "boolean",
          "default": false,
          "description": "Open feature files in VS Code's native text editor instead of the inline rich-text editor."
        }
      }
    },
    "menus": {
      "editor/title/run": [
        {
          "command": "kanban-markdown.open",
          "when": "resourceLangId == markdown"
        }
      ]
    }
  },
  "bin": {
    "kanban-md": "./dist/standalone.js",
    "kanban": "./dist/cli.js",
    "kanban-mcp": "./dist/mcp-server.js"
  },
  "scripts": {
    "publish:all": "vsce publish && ovsx publish",
    "vscode:prepublish": "npm run build",
    "build": "npm run build:extension && npm run build:webview && npm run build:standalone-webview && npm run build:cli && npm run build:mcp",
    "build:cli": "esbuild src/cli/index.ts --bundle --outfile=dist/cli.js --format=cjs --platform=node --banner:js=\"#!/usr/bin/env node\"",
    "build:mcp": "esbuild src/mcp-server/index.ts --bundle --outfile=dist/mcp-server.js --format=cjs --platform=node --external:@modelcontextprotocol/sdk --external:zod --banner:js=\"#!/usr/bin/env node\"",
    "build:extension": "esbuild src/extension/index.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "build:webview": "vite build",
    "build:standalone": "npm run build:standalone-server && npm run build:standalone-webview",
    "build:standalone-server": "esbuild src/standalone/index.ts --bundle --outfile=dist/standalone.js --format=cjs --platform=node --banner:js=\"#!/usr/bin/env node\"",
    "build:standalone-webview": "vite build --config vite.standalone.config.ts",
    "standalone": "npm run build:standalone && node dist/standalone.js",
    "watch": "concurrently \"npm run watch:extension\" \"npm run watch:webview\"",
    "watch:extension": "esbuild src/extension/index.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --watch",
    "watch:webview": "vite build --watch",
    "watch:standalone-server": "esbuild src/standalone/index.ts --bundle --outfile=dist/standalone.js --format=cjs --platform=node --banner:js=\"#!/usr/bin/env node\" --watch",
    "dev:standalone-server": "node --watch-path=dist/standalone.js dist/standalone.js --port 3001 --no-browser",
    "dev:standalone-vite": "vite dev --config vite.standalone.config.ts",
    "dev": "npm run build:standalone-server && concurrently \"npm run watch:extension\" \"npm run watch:webview\" \"npm run watch:standalone-server\" \"npm run dev:standalone-server\" \"npm run dev:standalone-vite\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "package": "vsce package --no-dependencies -o releases/",
    "release": "node scripts/release.js",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/vscode": "^1.85.0",
    "@types/ws": "^8.5.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vscode/vsce": "^3.7.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "esbuild": "^0.19.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "ovsx": "^0.10.8",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.53.0",
    "vite": "^5.0.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@tiptap/extension-placeholder": "^3.15.3",
    "@tiptap/pm": "^3.15.3",
    "@tiptap/react": "^3.15.3",
    "@tiptap/starter-kit": "^3.15.3",
    "chokidar": "^4.0.0",
    "clsx": "^2.1.1",
    "fractional-indexing": "^3.2.0",
    "lucide-react": "^0.562.0",
    "marked": "^17.0.3",
    "open": "^10.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.0",
    "tiptap-markdown": "^0.9.0",
    "ws": "^8.18.0",
    "zustand": "^5.0.10"
  }
}
