{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/sdk",
    "rootDir": "src"
  },
  "include": [
    "src/sdk/**/*",
    "src/shared/types.ts",
    "src/shared/config.ts"
  ],
  "exclude": [
    "src/sdk/__tests__"
  ]
}
